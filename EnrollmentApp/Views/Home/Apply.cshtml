@model EnrollmentApp.Models.ApplyViewModels
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="row applybody">
    <div class="col-md-3"></div>
    <div class="col-md-6 rounded login applyform border-dark">
        <div class="mt-3 float-left"><h4>Apply Today..</h4></div>
        <div class="mt-3 float-right">@Html.Partial("_LoginPartial")</div>
        <div class="clearfix mb-4"></div>
        <section id="loginForm" class="">

            @using (Html.BeginForm("Apply", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()

                <h5 id="authentication" class="text-center">Application Form (2018-2019)</h5>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group groups fgroup">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                        </div>

                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                        </div>
                    </div>
                </div>

                <div class="form-group fgroup">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", placeholder = "Date of Birth", id = "DOB" })
                        </div>
                        <div class="col-md-6">
                            @Html.EnumDropDownListFor(m => m.Gender, "Pleas select gender", new { @class = "form-control", placeholder = "Gender", id = "genderbox" })

                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Street Address" })
                        </div>
                    </div>
                </div>
                <div class="form-group groups fgroup">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control", placeholder = "Zip", id ="zip" })
                        </div>
                    </div>
                </div>

                <div class="form-group groups fgroup">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                        </div>
                    </div>
                </div>


                <div class="form-group groups fgroup">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number",
                       id = "PhoneNumber"})
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>
                <div class="form-group groups fgroup">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.EnumDropDownListFor(m => m.Major, "Please select major", new { @class = "form-control", placeholder = "Major", id = "majorbox" })
                        </div>
                    </div>
                </div>


                <div class="form-group groups">
                    <div class="row justify-content-end">
                        <div class="col-md-7 mb-2">
                            <input type="submit" class="btn btn-default" value="Apply" />
                        </div>
                    </div>
                </div>

            }
        </section>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            $("#PhoneNumber").mask('(000) 000-0000');
            $("#DOB").mask('00 / 00 / 0000');
            $("#zip").mask('00000');
        })
    </script>
}


